  "description": "ByteCave browser client for WebRTC P2P connections to storage nodes",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --declarationMap false --outDir dist",
