    "@libp2p/websockets": "^10.1.2",
    "@multiformats/multiaddr": "^13.0.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "libp2p": "^3.1.2",
    "react": "^19.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
